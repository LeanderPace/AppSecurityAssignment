@model IEnumerable<ShoppingCart.Application.ViewModels.SubmissionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>My Submissions</h1>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-8 mt-2">
        <div class="list-group">
            <a href="submissions/Details?id=@item.id" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@item.task.taskName</h5>
                    <small>@item.task.name @item.task.surname</small>
                </div>
                <p class="mb-1">@item.task.description</p>
                <small>@item.file</small>
            </a>
        </div>
    </div>
    <div class="col-4">
        <a href="comments/create?id=@item.id" class="btn btn-primary">View/Post Comments</a>
    </div>
    }
</div>
